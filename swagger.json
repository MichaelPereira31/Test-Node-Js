{
    "openapi":"3.0.0",
    "info":{
        "title":"User registration",
        "description":"This is a registration API",
        "version":"1.0.0",
        "contact":{
            "emial":"michaelpereira408@gmail.com"
        }
    },
    "basePath":"/",
    "components":{
        "securitySchemes":{
            "bearerAuth":{
                "type":"http",
                "scheme":"bearer",
                "bearerFormat":"JWT"
            }
        }
    },
    "paths":{
        "/login":{
            "post":{
                "tags":["User"],
                "summary":"Login",
                "description":"Login",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "email":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    },
                    "500":{
                        "description":"email or username incorrect"
                    }
                }
            }
        },
        "/user/{id}":{
            "get":{
                "security":[{"bearerAuth":[]}],
                "tags":["User"],
                "description":"Searching a user",
                "summary":"Searching a user",
                "parameters":[
                    {
                        "in":"path",
                        "name":"id",
                        "type":"string",
                        "required":true
                    }
                ],
                "responses":{
                    "200":{
                        "description":"Success",
                        "content":{
                            "application/json":{
                                "type":"array",
                                "items":{
                                    "type":"object",
                                    "properties":{
                                        "name":{
                                            "type":"string"
                                        },
                                        "username":{
                                            "type":"string"
                                        },
                                        "email":{
                                            "type":"string"
                                        },
                                        "admin":{
                                            "type":"boolean"
                                        },
                                        "created_at":{
                                            "type":"string"
                                        },
                                        "updated_at":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },

        "/user":{
            "get":{
                "security":[{"bearerAuth":[]}],
                "tags":["User"],
                "summary":"List all users",
                "description":"List all users",
                "responses":{
                    "200":{
                        "description":"Success",
                        "content":{
                            "application/json":{
                                "type":"array",
                                "items":{
                                    "type":"object",
                                    "properties":{
                                        "name":{
                                            "type":"string"
                                        },
                                        "username":{
                                            "type":"string"
                                        },
                                        "email":{
                                            "type":"string"
                                        },
                                        "password":{
                                            "type":"string"
                                        },
                                        "admin":{
                                            "type":"boolean"
                                        },
                                        "created_at":{
                                            "type":"string"
                                        },
                                        "updated_at":{
                                            "type":"string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            "post":{
                "tags":["User"],
                "summary":"Creating a user",
                "description":"Creating a new user",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "username":{
                                        "type":"string"
                                    },
                                    "email":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    },
                                    "admin":{
                                        "type":"boolean"
                                    }

                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    },
                    "500":{
                        "description":"registered email or username"
                    }
                }
            },
            "put":{
                "security":[{"bearerAuth":[]}],
                "tags":["User"],
                "summary":"Updationg registration",
                "description":"Updationg registration",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type":"object",
                                "properties":{
                                    "name":{
                                        "type":"string"
                                    },
                                    "username":{
                                        "type":"string"
                                    },
                                    "email":{
                                        "type":"string"
                                    },
                                    "password":{
                                        "type":"string"
                                    }

                                },
                                "exemple":{
                                    "name":"Michael",
                                    "username":"michael31",
                                    "email":"michael@gmail.com",
                                    "password":"123456"
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description":"Created"
                    },
                    "500":{
                        "description":"registered email or username"
                    }
                }
            },
            "delete":{
                "security":[{"bearerAuth":[]}],
                "tags":["User"],
                "summary":"Deleting account",
                "description":"Deleting account",
                "responses":{
                    "200":{
                        "description":"you successfully removed your account"
                    },
                    "500":{
                        "description":"error removing account"
                    }
                }
            }

        }
    }
    
}